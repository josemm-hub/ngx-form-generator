{
  "include": ["./src/"],
  "compilerOptions": {
    "target": "es2017",
    "module": "es2022",
    "types": ["node"],
    "outDir": "./dist/",
    "declaration": true,
    "noUncheckedIndexedAccess": true,
    "exactOptionalPropertyTypes": true,
    "strict": true,
    "jsx": "react-jsx",
    "isolatedModules": true,
    "noUncheckedSideEffectImports": true,
    "moduleResolution": "node",
    "moduleDetection": "force",
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
  }
}
